{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "import/export": 2,
    "import/first": 2,
    "import/no-commonjs": 2,
    "import/no-deprecated": 2,
    "import/no-duplicates": 2,
    "import/no-unresolved": 2,
    "import/no-webpack-loader-syntax": 2,
    "import/prefer-default-export": 0,
    "indent": ["error", 2],
    "linebreak-style": 0,
    "max-len": 0,
    "no-console": 0,
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}
